body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background: #f3f4f6; /* Use the same background color as your webpage */
}

.logo-box {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px 0;
    background-color: #ffffff; /* Adjust as needed for contrast */
    border-bottom: 1px solid #ddd; /* Optional: adds a bottom border */
}

.logo {
    max-width: 150px; /* Adjust as needed */
    height: auto;
}

.header {
    text-align: center;
    padding: 60px 20px;
    background: #f3f4f6;
}

.nav-links ul {
    list-style: none;
    padding: 0;
}

.nav-links ul li {
    display: inline-block;
    margin: 0 10px;
}

.nav-links ul li a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
}

.nav-links i {
    font-size: 20px;
    cursor: pointer;
}

.text-box h1 {
    font-size: 36px;
    margin: 20px 0;
}

.text-box p {
    font-size: 18px;
}

.text-box .hero-btn {
    display: inline-block;
    text-decoration: none;
    color: white;
    background: #000;
    padding: 10px 20px;
    border-radius: 5px;
}

@media screen and (max-width: 768px) {
    .nav-links ul li {
        display: block;
        margin: 10px 0;
    }

    .logo {
        max-width: 100px;
    }

    .text-box h1 {
        font-size: 28px;
    }
}
